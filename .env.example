# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=portyfoul
POSTGRES_USER=portyfoul
POSTGRES_PASSWORD=portyfoul

# Application Configuration
NODE_ENV=development

# Authentication Configuration
# IMPORTANT: Generate a strong random secret for production
# You can use: openssl rand -base64 32
JWT_SECRET=your_secret_key_here_change_in_production

# Finnhub API Configuration
# Get your free API key at https://finnhub.io/register
# Used for fetching stock prices
FINNHUB_API_KEY=your_api_key_here

# CoinGecko API Configuration (Optional)
# CoinGecko is used for cryptocurrency prices
# Free tier works without an API key, but rate limits are lower
# Get a demo API key at https://www.coingecko.com/en/api for higher limits
# COINGECKO_API_KEY=your_demo_api_key_here

# Price Update Configuration
# How often to update asset prices (in minutes)
PRICE_UPDATE_INTERVAL_MINUTES=15

# Email Service Configuration (AWS SES)
# AWS region where SES is configured
AWS_SES_REGION=us-east-2
# Email address to send from (must be verified in SES)
AWS_SES_FROM_EMAIL=support@halfzed.com

# AWS Credentials (OPTIONAL)
# - Production/ECS: Leave these unset to use IAM task role (recommended)
# - Local Development: Leave unset to use AWS CLI credentials (~/.aws/credentials)
# - CI/CD or Explicit Auth: Set these if you need to use specific credentials
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Application URL Configuration
# Base URL for the application (used in email links)
APP_URL=http://localhost:3000

# Token Expiration Configuration
# Email verification token expiry (in hours)
VERIFICATION_TOKEN_EXPIRY_HOURS=24
# Password reset token expiry (in minutes)
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60

# Rate Limiting Configuration
# Number of registration attempts allowed per 15 minutes per IP
RATE_LIMIT_REGISTRATION_PER_15MIN=5
# Number of login attempts allowed per 15 minutes per IP
RATE_LIMIT_LOGIN_PER_15MIN=10
# Number of password reset requests allowed per 15 minutes per IP
RATE_LIMIT_PASSWORD_RESET_PER_15MIN=3
# Number of verification email resend requests allowed per 15 minutes per IP
RATE_LIMIT_RESEND_VERIFICATION_PER_15MIN=3
